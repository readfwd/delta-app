.template-container
  overflow-y: visible

.template-container-inner
  overflow-x: hidden //Collapses margins


.template-bg
  background-color: #f9f9f9

// All in-template styling goes in here:

.template-container-inner
  padding: 0 0 1em 0
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;

  section
    > *
      padding: 0 16px

    > .img
      padding: 0

  .img
    max-height: 400px
    overflow: hidden

    .img-container
      transform: translate(0, 50%)
      width: 100%
      height: 100%
      max-height: 400px

      img
        width: 100%
        height: auto
        transform: translate(0, -50%)
